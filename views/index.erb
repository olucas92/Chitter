<ul>
  <% @post.each do |post| %>
    <li><a href="<%= post.title%>"><%= post.text %></a></li>
  <% end %>
</ul>

<div id="new-post">
  <form action="/post" method="post">
    Title: <input type="text" name="title">
    Text: <input type="text" name="text">
    <input type="submit" value="Add post">
  </form>
</div>

  